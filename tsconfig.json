{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],                                    // âœ… Added root alias
      "@services/*": ["modules/blog/services/*"],
      "@components/*": ["components/*"],
      "@modules/*": ["modules/*"],
      "@context/*": ["context/*"],
      "@utils/*": ["utils/*"],
      "@lib/*": ["lib/*"]
    },
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".next", "out"]
}
