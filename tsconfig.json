{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* ---------- path & aliasing ---------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@services/*": ["src/services/*", "src/modules/blog/services/*"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@context/*": ["src/context/*"],
      "@utils/*": ["src/utils/*"],
      "@lib/*": ["src/lib/*"],
      "@types/*": ["src/types/*"]
    },

    /* ---------- global typings ----------- */
    "types": ["node", "next", "next/types/global"]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "out"]
}
