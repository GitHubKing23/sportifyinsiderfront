{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@services/*": ["modules/blog/services/*"],
      "@components/*": ["components/*"],
      "@modules/*": ["modules/*"],
      "@/*": ["*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"] // ✅ absolute paths, just in case
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts" // ✅ ensures custom declarations are picked up
  ],
  "exclude": ["node_modules", ".next", "out"]
}
